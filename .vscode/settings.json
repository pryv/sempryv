{
  "files.exclude": {
    "**/venv/": true,
    "**/__pycache__/": true,
    "**/.mypy_cache/": true,
    "**/node_modules/": true
  },
  "python.pythonPath": "${workspaceFolder}/backend/venv/bin/python",
  "python.formatting.provider": "black",
  "[python]": {
    "editor.formatOnSave": true
  },
  "prettier.eslintIntegration": true,
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "autoFix": true,
      "language": "vue"
    }
  ],
  "[vue]": {
    "editor.formatOnSave": true
  },
  "cSpell.words": [
    "LOINC",
    "Pryv",
    "SNOMEDCT",
    "SNOWEDCT",
    "Vuetify",
    "fhir",
    "jsonify",
    "materialdesignicons",
    "ptvsd",
    "pylint",
    "sempryv",
    "serializable"
  ]
}
