{
  // VSCode
  "files.exclude": {
    "**/__pycache__": true,
    "venv/": true
  },
  // Python
  "python.pythonPath": "${workspaceFolder}/backend/venv/bin/python",
  "python.formatting.provider": "black",
  "[python]": {
    "editor.formatOnSave": true
  },
  // Vue.js
  "prettier.eslintIntegration": true,
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "autoFix": true,
      "language": "vue"
    }
  ],
  "[vue]": {
    "editor.formatOnSave": true
  },
  // Dictionary
  "cSpell.words": [
    "LOINC",
    "Pryv",
    "Pryv",
    "SNOMEDCT",
    "SNOWEDCT",
    "Vuetify",
    "jsonify",
    "materialdesignicons",
    "pylint",
    "sempryv",
    "serializable"
  ],
}
